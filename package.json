{
  "name": "ac-next-boilerplate",
  "description": "A well-structured production ready Next.js boilerplate with Redux, Express.js, styled components, bundle analyzer and Built-in Project CLI. ",
  "version": "1.0.0",
  "repository": "https://github.com/abdullahceylan/ac-next-boilerplate",
  "author": "Abdullah Musab Ceylan <ben@abdullahceylan.com>",
  "private": true,
  "scripts": {
    "dev": "nodemon --inspect server/index.js",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "eslint": "eslint './{src,pages,server}/**/*' --ext .jsx,.js -c .eslintrc",
    "eslint:only": "eslint  -c .eslintrc",
    "stylelint": "stylelint \"**/*.scss\" --config ./.stylelintrc",
    "prettier": "prettier --write \"**/*.js\" --write \"**/*.jsx\"",
    "prettier:check": "prettier --check \"**/*.js\" \"**/*.jsx\" \"**/*.ts\" \"**/*.tsx\" \"**/*.scss\"",
    "prettier:staged": "pretty-quick --staged",
    "analyze": "cross-env BUNDLE_ANALYZE=both next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,scss,css,json,md}": [
      "yarn prettier:staged",
      "git add"
    ],
    "./@(pages|components|utils)/**/*.{js,jsx}": [
      "eslint -c .eslint",
      "git add"
    ]
  },
  "dependencies": {
    "@next/bundle-analyzer": "^12.0.2",
    "next": "12.0.2",
    "next-compose-plugins": "^2.2.1",
    "next-pwa": "^5.4.0",
    "next-redux-wrapper": "^7.0.5",
    "next-routes": "^1.4.2",
    "next-seo": "^4.28.1",
    "polished": "^4.1.3",
    "prop-types": "^15.7.2",
    "query-string": "^7.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "^7.2.6",
    "redux": "^4.1.2",
    "redux-devtools-extension": "^2.13.9",
    "redux-promise-middleware": "^6.1.2",
    "redux-thunk": "^2.4.0",
    "swr": "^1.0.1"
  },
  "devDependencies": {
    "@abdullahceylan/eslint-config-react": "^1.1.0",
    "@abdullahceylan/prettier-config": "^1.1.0",
    "@abdullahceylan/stylelint-config": "^1.1.0",
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.16.0",
    "@babel/plugin-proposal-optional-chaining": "^7.16.0",
    "@babel/plugin-transform-react-jsx-source": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@svgr/webpack": "^5.5.0",
    "autoprefixer": "^10.4.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.3",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "babel-plugin-module-alias": "^1.6.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-styled-components": "^1.13.3",
    "babel-plugin-transform-dynamic-import": "^2.1.0",
    "babel-resolver": "^1.1.0",
    "boxen": "4.1.0",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.1.0",
    "eslint-config-next": "12.0.2",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-import-resolver-babel-module-alias": "^1.5.1",
    "express": "^4.17.1",
    "http-proxy-middleware": "^2.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "next-offline": "^5.0.5",
    "nodemon": "^2.0.14",
    "postcss": "^8.3.11",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "styled-components": "^5.3.3",
    "styled-tools": "^1.7.2",
    "tailwind-styled-components": "^2.0.3",
    "tailwindcss": "^2.2.19"
  }
}
